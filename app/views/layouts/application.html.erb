<!DOCTYPE html>
<html>
  <head>
    <title>Private</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <%= render 'layouts/header' %>
    <div class="container">
      <% flash.each do |mes_type, mes| %>
         <div class="alert alert-<%= mes_type %>">
          <%= mes %>
        </div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
